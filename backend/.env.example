# Ecomm Hub Backend Environment Variables
# Copy this file to .env and fill in the actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Database Configuration
# Choose ONE of the following two methods:

# Method 1: Individual connection parameters (Recommended)
DB_HOST=localhost
DB_PORT=5432
DB_USER=ecomm_user
DB_PASSWORD=your_secure_password_here
DB_NAME=ecomm_store

# Method 2: Full connection string (Alternative)
# DATABASE_URL=postgresql://ecomm_user:password@localhost:5432/ecomm_store

# JWT Secret (for authentication)
# Generate a strong key: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_should_be_long_and_random_minimum_32_characters

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database SSL (for production)
# DB_SSL=require

# Logs
LOG_LEVEL=debug
